<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/viewBg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kartnap.chandan.moviemash.DetailActivity"
    tools:showIn="@layout/activity_detail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/movieTitle"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:text="@string/name_movie"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_below="@+id/movieTitle"
                android:padding="@dimen/movie_title_padding"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plot"
                android:textColor="#000"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:text="@string/plot"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/layout_margin_top2"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAllCaps="@string/plot"
                android:layout_below="@+id/title"
                android:padding="@dimen/padding_layout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plotsynopsis"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:textSize="20sp"
                android:layout_below="@+id/plot"
                android:padding="@dimen/movie_title_padding"
                android:textColor="#000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ratings"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:text="@string/user_rating"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/layout_margin_top2"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000"
                android:textAllCaps="@string/plot"
                android:layout_below="@+id/plotsynopsis"
                android:padding="@dimen/padding_layout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userRating"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:textSize="20sp"
                android:textColor="#2962FF"
                android:layout_below="@+id/ratings" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/release"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:text="@string/release_date"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/layout_margin_top2"
                android:textSize="25sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@+id/userRating" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/releaseDate"
                android:layout_marginLeft="@dimen/layout_margin_left"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_below="@+id/release"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>